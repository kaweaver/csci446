= form_for(@game) do |f|
  - if @game.errors.any?
    #error_explanation
      %h2
        = pluralize(@game.errors.count, "error")
        prohibited this game from being saved:
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :Title
    %br/
    = f.text_field :Title
  .field
    = f.label :Rating
    %br/
    = f.text_field :Rating
  .field
    = f.label :Author
    %br/
    = f.text_field :Author
  .actions
    = f.submit
